<h1 class="inventory-heading">Edit ingredient</h1>

<%= form_with model: @recipe_food, url: recipe_recipe_food_path(@recipe_food.recipe_id, @recipe_food.id), local: true, method: :patch do |f| %>
  <div class="add_ingredient_form_element">
    <%= f.number_field :quantity, min: 0, class:"input_from", placeholder: "Quantity", autofocus: true %>
    <%= f.select(:food_id, @food_list.map {|food| [food.name, food.id]}, class: 'select_input_form' ) %>
    <%= f.hidden_field :recipe_id, value: @recipe.id %>
    <%= f.submit 'Confirm this ingredient', class:"btn_submit_from" %>
  </div
<% end %>