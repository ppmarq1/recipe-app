<div class="container">
<div class="bg-info row p-4 text-white">
  <div class="text-center d-flex justify-content-between my-4 w-50">
  <h1>
  <%= @recipe.name %>
  </h1>
  <div>
  <p>
  <strong> Preparation time:<%= @recipe.preparation_time %>
  </strong></p>
  <P><strong>Cooking time:
  <%= @recipe.cooking_time %>
  </strong></p>
  <p><strong><%= @recipe.description%></strong></p>
  </div>

<% if can? :manage, @recipe %>
    <div class="d-flex my-4 mx-auto justify-content-between w-50">
      <%= link_to "Shopping list", shopping_list_index_path, class: "btn btn-outline-primary" %>
      <%= link_to "Add ingredient", new_recipe_recipe_food_path(@recipe.id) , class: "btn btn-outline-primary" %>
    </div>
  <% end %>
   <hr>
  <div class="d-flex justify-content-between">
    <%= link_to 'Generate shopping list', recipes_path, class: "btn text-light bg-dark col-sm-2" %>
    <%# <%= link_to 'Add ingredient', new_recipe_recipe_food_path(@recipe.id), class: "btn text-light bg-dark col-sm-2" %>
  </div>
  <hr>
  <div class="recipe_details_ingredients">
  <table class="table table-success table-striped text-center">
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
    <% @recipe_foods.each do |recipe_food| %>
      <%= render recipe_food %>
    <% end %>
    <td class="d-flex mx-auto">
      <%= link_to "Modify", edit_recipe_recipe_food_path(@recipe.id, recipe_food.id), class: "btn btn-primary mx-2" %>
      <%= button_to "Remove", recipe_recipe_food_path(@recipe.id, recipe_food.id), method: :delete, class: "btn btn-danger mx-2" %>
    </td>
  </table>

<%= link_to "New recipe food", new_recipe_recipe_food_path(@recipe.id) %>
</div>
</div>
