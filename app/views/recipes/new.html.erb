<div class="container border">
    <h2>Add new recipe</h2>
    <%= form_with model: Recipe.new, class: "my-4" do |f| %>
        <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
            <%= f.label :preparation_time, class: "form-label" %>
            <%= f.text_field :preparation_time, class: "form-control" %>
        </div>
        <div class="mb-3">
            <%= f.label :cooking_time, class: "form-label" %>
            <%= f.text_field :cooking_time, class: "form-control" %>
        </div>
        <div class="mb-3">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_field :description, class: "form-control" %>
        </div>
        <%= f.submit class: "btn btn-primary" %>
    <% end %>
</div>

